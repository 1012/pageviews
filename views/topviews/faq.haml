!!!
%html
  %head
    - include "../../_head.php"
    %title
      = $I18N->msg( 'topviews-title' ) . ' - ' . $I18N->msg( 'faq' )
  %body
    %div.container
      %div.col-lg-offset-2
        / Header
        %header.row.aqs-row
          %div.col-lg-10.text-center
            %h4
              %strong
                = $I18N->msg( 'topviews-title' ) . ' - ' . $I18N->msg( 'faq' )

        %div.col-lg-10
          %ul.list-group
            %li.list-group-item(id="data_caveat")
              %p
                %strong
                  = $I18N->msg( 'faq-topviews-data-approx-title')
              %p
                - $restBaseLink = "<a href='https://wikimedia.org/api/rest_v1/?doc#/'>Wikimedia Pageviews API</a>"
                = $I18N->msg( 'faq-topviews-data-approx-body', array( 'variables' => array( $restBaseLink ) ) )
            %li.list-group-item(id="false_positive")
              %p
                %strong
                  = $I18N->msg( 'faq-topviews-false-positive-title')
              %p
                = $I18N->msg( 'faq-topviews-false-positive-body1')
              %p
                = $I18N->msg( 'faq-topviews-false-positive-body2')
            %li.list-group-item
              %p
                %strong= $I18N->msg( 'faq-old-data-title' )
              %p
                = $I18N->msg( 'faq-old-data-body' )
            %li.list-group-item
              %p
                %strong= $I18N->msg( 'faq-todays-date-title' )
              %p
                = $I18N->msg( 'faq-todays-date-body' )
            %li.list-group-item
              %p
                %strong= $I18N->msg( 'faq-bug-report-title' )
              %p
                = $I18N->msg( 'faq-bug-report-body' )

        %div.col-lg-10.text-center.tm
          %a(href="/topviews")
            = $I18N->msg( 'faq-return-to', array( 'variables' => array( $I18N->msg( 'topviews-title' ) ), 'parsemag' => true ) )

        - $currentApp = "topviews";
        - include "../../_footer.php";

  :javascript
    if (location.hash) $(location.hash).addClass('flash');
