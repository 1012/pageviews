!!!
%html
  %head
    - include '../../_head.php'
    %title
      = $I18N->msg( 'massviews-title' ) . ' - ' . $I18N->msg( 'faq' )
  %body
    %div.container
      %header.col-lg-12.text-center
        %h4
          %strong
            = $I18N->msg( 'massviews-title' )
          %small.app-description
            = $I18N->msg( 'faq' )

      %main.col-lg-10.col-lg-offset-1
        %ul.list-group
          - include "../../faq_parts/throttle.php"
          %li.list-group-item(id="sources")
            %p
              %strong= $I18N->msg( 'faq-massviews-sources-title' )
            %ul.faq-ul
              %li
                - $pagePileId = $I18N->msg( 'page-pile-id' )
                - $pagePileLink = "<a href='//tools.wmflabs.org/pagepile' target='_blank'>Page Pile</a>"
                %i= $pagePileId
                = $I18N->msg( 'faq-massviews-sources-pagepile', array( 'variables' => array( $pagePileLink ) ) )
              %li
                - $categoryLink = "<a href='https://en.wikipedia.org/wiki/Category:Folk_musicians_from_New_York'>https://en.wikipedia.org/wiki/Category:Folk_musicians_from_New_York</a>"
                %i= $I18N->msg( 'category-url' )
                = $I18N->msg( 'faq-massviews-sources-category-url', array( 'variables' => array( $categoryLink ) ) )
              %li
                - $templateLink = "<a href='https://en.wikipedia.org/wiki/Template:Infobox_Olympic_games'>https://en.wikipedia.org/wiki/Template:Infobox_Olympic_games</a>"
                %i= $I18N->msg( 'template-url' )
                = $I18N->msg( 'faq-massviews-sources-template-url', array( 'variables' => array( $templateLink ) ) )
              %li
                %i Quarry
                = $I18N->msg( 'faq-massviews-sources-quarry', array( 'variables' => array( 'Quarry', 'page_title' ) ) )
          %li.list-group-item(id="category_subject_toggle")
            %p
              %strong= $I18N->msg( 'faq-massviews-subject-page-title', array( 'variables' => array( $I18N->msg( 'category-subject-toggle' ) ) ) )
            %p
              = $I18N->msg( 'faq-massviews-subject-page-body' )
          - include "../../faq_parts/old_data.php"
          - include "../../faq_parts/todays_data.php"
          - include "../../faq_parts/agents.php"
          - include "../../faq_parts/feedback.php"

        %div.col-lg-12.text-center.tm
          %a(href="/massviews")
            = $I18N->msg( 'faq-return-to', array( 'variables' => array( $I18N->msg( 'massviews-title' ) ), 'parsemag' => true ) )

        - $currentApp = "massviews";
        - include "../../_footer.php"
